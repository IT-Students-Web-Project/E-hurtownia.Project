<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-Wholesale - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container col-10">
                <span class="navbar-brand">E-Wholesale Project</span>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-light btn-outline-secondary" asp-controller="User" asp-action="Index">Main page</a>
                        </li>
                    </ul>
                </div>

                @if (Context.Request.Cookies["COOKIE_LOGGED_USERNAME"] == null) {
                    <form method="post" class="form-inline">
                        <input type="submit" class="btn btn-primary btn-outline-primary" value="Sign in / Sign up" asp-controller="User" asp-action="Login" />
                    </form>
                } else {
                    <form method="post" class="form-inline">
                        <label class="text-light">Logged in as&nbsp;<label class="text-info border-right">@Context.Request.Cookies["COOKIE_LOGGED_USERNAME"]&nbsp;</label></label>&nbsp;
                        <a class="text-danger" asp-controller="User" asp-action="Logout">Log out</a>
                    </form>
                }
            </div>
        </nav>
    </header>
    <div class="container col-10">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light bg-dark">
        <div class="container col-10 text-center">
            &copy; 2020 E-Wholesale Project version @E_hurtownia.Utils.ConfigUtil.GetVersion() - Project group 1 (Barć, Michalski, Skowron, Stich & Wyciślik)
        </div>
    </footer>
</body>
</html>
